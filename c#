using System;

public class HelloWorld
{
    public static void Main(string[] args)
    {
        Console.WriteLine ("Programmed by Jennylyn Carbonell");
        
        // Type weight in pounds
        Console.Write ("Enter weight in Pounds (lbs): ");
        double pounds = Convert.ToInt32(Console.ReadLine());
        double  kilogram = pounds * 0.453592;
        Console.WriteLine ("Pounds converted to Kilogram (kg):"+ kilogram);
        
        // Line breaker
        Console.WriteLine ("================================================")
        
        // Type distance in miles
        Console.Write ("Enter distance in miles: ");
        double miles =  Convert.ToInt32(Console.ReadLine());
        double kilometer = miles * 1.60934;
        Console.WriteLine ("Miles converted to Kilometer (km):"+ kilometer);
        
         Console.WriteLine ("================================================")
    
        // Type temperature in farenheit
        Console.Write ("Enter temperature in farenheit: ");
        double farenheit = Convert.ToInt32(Console.ReadLine());
        double celcius = farenheit - 32 * 0.556;
        Console.WriteLine ("Farenheit converted to Celcius:" + celcius);
        
        Console.WriteLine ("================================================")
        
        // Student 1 type their age
        Console.Write ("Enter your age: ");
        string studentAge1 = Console.ReadLine();
        Console.WriteLine("Age of Student 1: " + studentAge1);

        // Student 2 type their age
